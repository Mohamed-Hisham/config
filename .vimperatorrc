" テキストボックスにフォーカスしない
set focuscontent

" エラーコンソール出力レベル
set verbose=9

" 新規タブを開いた際にアクティブにする機能
set activate=homepage,quickmark,tabopen,paste

set showstatuslinks=2
"補完
set wildoptions=auto
set complete=l

" ブラウザタイトルの変更
set titlestring=Firefox

" ブックマークツールバー表示
set go=b

" 上のディレクトリに移動
map <BS> gu
map <C-BS> gU

" j/k でのスクロール幅を1行から3行に変更
map j 3<C-e>
map k 3<C-y>

" J/K をC-d/u互換に
map J <C-d>
map K <C-u>

" h/l, Left/Right でタブ移動
map h gT
map l gt
map <Left>  gT
map <Right> gt

" C-h/l, S-Left/Right でタブ位置変更
map <C-h> :tabmove! -1<CR>
map <C-l> :tabmove! +1<CR>
map <S-Left> :tabmove! -1<CR>
map <S-Right> :tabmove! +1<CR>

" i でvimperatorを無効化
map i <C-z>

" I でcaret modeを有効化
map I <insert>

" ex modeでC-jを無効化
cmap <C-j> <Nop>

" ex modeでUp/DownをTab/S-Tab互換に
cmap <Down> <Tab>
cmap <Up> <S-Tab>

" ! でページのCSSをon/off
map ! :set invum<CR>

" ステータスバーにfeedボタンを表示
" http://d.hatena.ne.jp/teramako/20071205/p1
:javascript <<EOM
(function(){
 var feedPanel = document.createElement('statusbarpanel');
 var feedButton = document.getElementById('feed-button');
 feedPanel.setAttribute('id','feed-panel-clone');
 feedPanel.appendChild(feedButton.cloneNode(true));
 feedButton.parentNode.removeChild(feedButton);
 document.getElementById('status-bar').insertBefore(feedPanel,document.getElementById('security-button'));
 })();
EOM

" C-r でブラウザ再起動
map <C-r> :restart<CR>

" 設定ファイルを再読み込み
map ,s :so /Users/akamatsu/.vimperatorrc<CR>

" hint_migemo
set hintmatching=custom

" エンコーディング変更
map ,j :<C-u>set encoding=Shift_JIS<Cr>
map ,e :<C-u>set encoding=EUC-JP<Cr>
map ,u :<C-u>set encoding=UTF-8<Cr>

"http://vimperator.g.hatena.ne.jp/retlet/20090223/1235415599
style -name tab-text-shadow-fix chrome://* <<EOM
.tab-text-shadow {
  display: none !important;
}
EOM

javascript if (typeof hBookmark != 'undefined') liberator.loadScript('chrome://hatenabookmark/content/vimperator/plugin/hatenabookmark.js', {__proto__: this});
